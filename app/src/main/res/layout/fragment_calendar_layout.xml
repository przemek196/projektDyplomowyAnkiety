<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="#026767"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brak dostępu do internetu"
        android:id="@+id/Internet"
        android:textSize="20dp"
        android:layout_gravity="center"
        />
    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3C4B50"
        app:pagesColor="#7CA6A3"
        app:daysLabelsColor="#FFFFFF"
        app:headerLabelColor="#FFFFFF"
        app:selectionColor="#FFFFFF"
        app:todayLabelColor="@color/BackgroundtWhiteColor"
        app:headerColor="#009688"
        app:abbreviationsBarColor="#62C5BB"
        />


    <LinearLayout
        android:id="@+id/linLayAnim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/backBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#226C25"
                android:drawableRight="@drawable/ic_arrow_up_size"
                android:paddingLeft="100dip"
                android:paddingRight="100dp"
                android:singleLine="true"
                android:text="Wroć"
                android:textColor="#ffffff"
                android:textSize="12sp"></Button>

            <Button
                android:id="@+id/btnClearDaySurveys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="#3C4B50"
                android:drawableLeft="@drawable/ic_delete_black_24dp"
               android:paddingLeft="29dp"
                android:textColor="#ffffff"
                android:textSize="12sp"></Button>


        </LinearLayout>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"></TextView>

        <ScrollView
            android:id="@+id/sc1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linlayCal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

        </ScrollView>


    </LinearLayout>


